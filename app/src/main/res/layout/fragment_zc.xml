<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ZCFragment">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="10dp"
        android:text="2020-11-11 11:11">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_hf"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_hf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hf_click"></ImageView>

            <TextView
                android:id="@+id/tv_hf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorClick"
                android:layout_marginTop="5dp"
                android:text="话费"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_gw"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_gw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gw"></ImageView>

            <TextView
                android:id="@+id/tv_gw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNormal"
                android:layout_marginTop="5dp"
                android:text="购物"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_cf"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_cf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cf"></ImageView>

            <TextView
                android:id="@+id/tv_cf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNormal"
                android:layout_marginTop="5dp"
                android:text="吃饭"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_qt"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_qt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qt"></ImageView>

            <TextView
                android:id="@+id/tv_qt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNormal"
                android:layout_marginTop="5dp"
                android:text="其他"></TextView>
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></View>
    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:background="@null"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="14sp"
        android:hint="添加备注信息"></EditText>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef"></View>
    <TextView
        android:id="@+id/tv_value"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right|center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textSize="18sp"
        android:text="0"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNormal"
                android:textColor="#fff"
                android:text="1"></Button>
            <Button
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNormal"
                android:layout_marginTop="1dp"
                android:textColor="#fff"
                android:text="4"></Button>
            <Button
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNormal"
                android:layout_marginTop="1dp"
                android:textColor="#fff"
                android:text="7"></Button>
            <Button
                android:id="@+id/btn_dot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNormal"
                android:textColor="#fff"
                android:layout_marginTop="1dp"
                android:text="."></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNormal"
                android:textColor="#fff"
                android:text="2"></Button>
            <Button
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNormal"
                android:layout_marginTop="1dp"
                android:textColor="#fff"
                android:text="5"></Button>
            <Button
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNormal"
                android:layout_marginTop="1dp"
                android:textColor="#fff"
                android:text="8"></Button>
            <Button
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNormal"
                android:textColor="#fff"
                android:layout_marginTop="1dp"
                android:text="0"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNormal"
                android:textColor="#fff"
                android:text="3"></Button>
            <Button
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNormal"
                android:layout_marginTop="1dp"
                android:textColor="#fff"
                android:text="6"></Button>
            <Button
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNormal"
                android:textColor="#fff"
                android:layout_marginTop="1dp"
                android:text="9"></Button>
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNormal"
                android:layout_marginTop="1dp"
                android:textColor="#fff"
                android:text="X"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNormal"
                android:textColor="#fff"
                android:text="清零"></Button>
            <Button
                android:id="@+id/btn_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:background="@color/colorClick"
                android:text="确定"></Button>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>